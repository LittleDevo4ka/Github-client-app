<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/commit_card_button"

        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cornerRadius="4dp"
        android:elevation="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/commit_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/commit_message"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:text="Hello"
        android:elevation="1dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"

        app:layout_constraintTop_toTopOf="@id/commit_card_button"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/commit_card_button"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/commit_card_button"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/committer_nickname"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:text="Hello"
        android:elevation="1dp"

        app:layout_constraintTop_toBottomOf="@id/commit_message"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/commit_card_button"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/commit_card_button"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/commit_sha"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:text="Hello"
        android:elevation="1dp"

        app:layout_constraintTop_toBottomOf="@id/committer_nickname"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/commit_card_button"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/commit_card_button"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/commit_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:text="Hello"
        android:elevation="1dp"

        app:layout_constraintTop_toBottomOf="@id/commit_sha"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/commit_card_button"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/commit_card_button"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>